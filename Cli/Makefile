#--------------------------------------------
# 컴파일러 설정
#--------------------------------------------
CXX = g++
CXXFLAGS = -Wall -Wextra -std=c++17 -g

#--------------------------------------------
# 실행파일 이름
#--------------------------------------------
TARGET = main

#--------------------------------------------
# 소스 / 오브젝트 파일
#--------------------------------------------
SRCS = main.cpp testClient.cpp
OBJS = $(SRCS:.cpp=.o)

#--------------------------------------------
# 기본 빌드 규칙
#--------------------------------------------
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $^

#--------------------------------------------
# 개별 cpp → o 빌드 규칙
#--------------------------------------------
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

#--------------------------------------------
# 빌드 결과 정리
#--------------------------------------------
clean:
	rm -f $(OBJS) $(TARGET)

#--------------------------------------------
# 실행
#--------------------------------------------
run: $(TARGET)
	./$(TARGET)

